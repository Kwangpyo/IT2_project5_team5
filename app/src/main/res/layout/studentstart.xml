<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:id="@+id/natural"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:orientation="horizontal"
                android:background="@drawable/background_2">

            </LinearLayout>



            <LinearLayout
                android:id="@+id/imageLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



            </LinearLayout>


            <LinearLayout
                android:layout_below="@+id/natural"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:id="@+id/studentstart_survey">


                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/survey2"
                        android:layout_gravity="center"
                        />


                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="SURVEY"
                        android:textSize="14dp"
                        android:textColor="#000000"
                        android:letterSpacing="0.025"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:letterSpacing="0.025"
                            android:text="Simple Survey"
                            android:textColor="#000000"

                            android:textSize="14dp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="recommend to do it every month"
                            android:textColor="#000000"
                            android:letterSpacing="0.025"
                            android:layout_marginLeft="30dp"
                            android:textSize="12dp"
                            android:layout_marginTop="5dp"/>
                    </LinearLayout>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#99A1AC"
                    android:layout_marginTop="20dp"/>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/studentstart_sos"
                    android:layout_marginTop="20dp">


                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/sos"
                        android:layout_gravity="center"
                        />


                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="SOS"
                        android:textColor="#000000"
                        android:textSize="14dp"
                        android:letterSpacing="0.025"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Emergency Telephone"
                            android:letterSpacing="0.025"
                            android:textColor="#000000"
                            android:layout_marginLeft="30dp"
                            android:textSize="14dp"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="call to police when emergency"
                            android:layout_marginLeft="30dp"
                            android:letterSpacing="0.025"
                            android:textColor="#000000"
                            android:textSize="12dp"
                            android:layout_marginTop="5dp"/>

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#99A1AC"
                    android:layout_marginTop="20dp"/>


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/studentstart_declare"
                    android:layout_marginTop="20dp">


                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/police"
                        android:layout_gravity="center"
                        />


                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="DECLARATION"
                        android:textSize="14dp"
                        android:letterSpacing="0.025"
                        android:textColor="#000000"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="10dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:letterSpacing="0.025"
                            android:text="Report Crime"
                            android:textColor="#000000"
                            android:textSize="14dp"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="5dp"
                            android:letterSpacing="0.025"
                            android:text="help your friends"
                            android:textColor="#000000"
                            android:textSize="12dp" />

                    </LinearLayout>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#99A1AC"
                    android:layout_marginTop="20dp"/>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/studentstart_consult"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/consult"
                        android:layout_gravity="center"
                        />


                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="CONSULT"
                        android:textSize="14dp"
                        android:letterSpacing="0.025"
                        android:textColor="#000000"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="10dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Consulting With Teacher"
                            android:letterSpacing="0.025"
                            android:textColor="#000000"
                            android:layout_marginLeft="30dp"
                            android:textSize="14dp"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="get help from teacher"
                            android:layout_marginLeft="30dp"
                            android:letterSpacing="0.025"
                            android:textColor="#000000"
                            android:textSize="12dp"
                            android:layout_marginTop="5dp"/>
                    </LinearLayout>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#99A1AC"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"/>



            </LinearLayout>


        </RelativeLayout>


    <TextView
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USER"
        android:layout_gravity="center"
        android:gravity="center"
        android:letterSpacing="0.025"
        android:id="@+id/studentstart_user"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:layout_gravity="center"
        android:gravity="center"
        android:letterSpacing="0.025"
        android:id="@+id/studentstart_name"
        android:textColor="#fff"
        android:textSize="18dp"
        android:layout_below="@+id/studentstart_user"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="log out"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/studentstart_logout"
        />



</RelativeLayout>
